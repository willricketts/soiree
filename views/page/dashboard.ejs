<script>
  <% for(event in events) { %>
  L.mapbox.featureLayer({
      "type": "Feature",
      "geometry": {
        "type": "Point",
        "coordinates": [<%- events[event].longitude %>,<%- events[event].latitude %>]
      },
      "properties": {
        "title": "<%- events[event].title %>",
        "description": "<%- events[event].description %>",
        "marker-color": "#fc4353",
        "marker-size": "large",
        "marker-symbol": "star"
      }
  }).addTo(map);
  <% } %>
</script>
